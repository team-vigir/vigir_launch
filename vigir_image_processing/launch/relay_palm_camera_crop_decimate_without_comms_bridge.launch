  <node name="relay_right_palm_camera_info_still" pkg="topic_tools" type="relay" args="/r_palm_image_full_still/camera_info /r_palm_image_full/camera_info"/>
  
  <!--Relay ROI stills to images displayed in OCS-->
  <node name="relay_cropped_left_palm_image_still" pkg="topic_tools" type="relay" args="/l_palm_image_cropped_still/image_raw /l_palm_image_cropped/image_raw"/>
