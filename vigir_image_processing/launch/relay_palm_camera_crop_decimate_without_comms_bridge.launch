  <node name="relay_cropped_left_palm_image_video" pkg="topic_tools" type="relay" args="/l_palm_image_cropped_video/image_raw /l_palm_image_cropped/image_raw"/>
  <node name="relay_cropped_left_palm_camera_info_video" pkg="topic_tools" type="relay" args="/l_palm_image_cropped_video/camera_info /l_palm_image_cropped/camera_info"/>
  <node name="relay_cropped_right_palm_image_video" pkg="topic_tools" type="relay" args="/r_palm_image_cropped_video/image_raw /r_palm_image_cropped/image_raw" />
  <node name="relay_cropped_right_palm_camera_info_video" pkg="topic_tools" type="relay" args="/r_palm_image_cropped_video/camera_info /r_palm_image_cropped/camera_info"/>

