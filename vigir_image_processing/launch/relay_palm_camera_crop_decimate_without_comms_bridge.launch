<?xml version="1.0"?>

<launch>
  
  <!--Relay stills to images displayed in OCS-->
  <node name="relay_left_palm_image_still" pkg="topic_tools" type="relay" args="/l_palm_image_full_still/image_raw /l_palm_image_full/image_raw"/>
  <node name="relay_left_palm_camera_info_still" pkg="topic_tools" type="relay" args="/l_palm_image_full_still/camera_info /l_palm_image_full/camera_info"/>
