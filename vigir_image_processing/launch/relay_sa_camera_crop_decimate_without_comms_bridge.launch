<?xml version="1.0"?>

<launch>
  
  <!--Relay stills to images displayed in OCS-->
  <node name="relay_left_image_still" pkg="topic_tools" type="relay" args="/lsa_image_full_still/image_raw /lsa_image_full/image_raw"/>
  <node name="relay_left_camera_info_still" pkg="topic_tools" type="relay" args="/lsa_image_full_still/camera_info /lsa_image_full/camera_info"/>
  <node name="relay_right_image_still" pkg="topic_tools" type="relay" args="/rsa_image_full_still/image_raw /rsa_image_full/image_raw" />
  <node name="relay_right_camera_info_still" pkg="topic_tools" type="relay" args="/rsa_image_full_still/camera_info /rsa_image_full/camera_info"/>
  
  <!--Relay ROI stills to images displayed in OCS-->
  <node name="relay_cropped_left_image_still" pkg="topic_tools" type="relay" args="/lsa_image_cropped_still/image_raw /lsa_image_cropped/image_raw"/>
  <node name="relay_cropped_left_camera_info_still" pkg="topic_tools" type="relay" args="/lsa_image_cropped_still/camera_info /lsa_image_cropped/camera_info"/>
  <node name="relay_cropped_right_image_still" pkg="topic_tools" type="relay" args="/rsa_image_cropped_still/image_raw /rsa_image_cropped/image_raw" />
  <node name="relay_cropped_right_camera_info_still" pkg="topic_tools" type="relay" args="/rsa_image_cropped_still/camera_info /rsa_image_cropped/camera_info"/>
  
  <!--Relay video to images displayed in OCS-->
  <node name="relay_left_image_video" pkg="topic_tools" type="relay" args="/lsa_image_full_video/image_raw /lsa_image_full/image_raw"/>
  <node name="relay_left_camera_info_video" pkg="topic_tools" type="relay" args="/lsa_image_full_video/camera_info /lsa_image_full/camera_info"/>
  <node name="relay_right_image_video" pkg="topic_tools" type="relay" args="/rsa_image_full_video/image_raw /rsa_image_full/image_raw" />
  <node name="relay_right_camera_info_video" pkg="topic_tools" type="relay" args="/rsa_image_full_video/camera_info /rsa_image_full/camera_info"/>
  
  <!--Relay video to images displayed in OCS-->
  <node name="relay_cropped_left_image_video" pkg="topic_tools" type="relay" args="/lsa_image_cropped_video/image_raw /lsa_image_cropped/image_raw"/>
  <node name="relay_cropped_left_camera_info_video" pkg="topic_tools" type="relay" args="/lsa_image_cropped_video/camera_info /lsa_image_cropped/camera_info"/>
  <node name="relay_cropped_right_image_video" pkg="topic_tools" type="relay" args="/rsa_image_cropped_video/image_raw /rsa_image_cropped/image_raw" />
  <node name="relay_cropped_right_camera_info_video" pkg="topic_tools" type="relay" args="/rsa_image_cropped_video/camera_info /rsa_image_cropped/camera_info"/>

</launch>

