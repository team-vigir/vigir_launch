  <node name="relay_sa_right_camera_info_video" pkg="topic_tools" type="relay" args="/rsa_image_full_video/camera_info /rsa_image_full/camera_info"/>
  <node name="relay_sa_right_rectified_image_video" pkg="topic_tools" type="relay" args="/rrsa_image_full_video/image_raw /rrsa_image_full/image_raw" />

