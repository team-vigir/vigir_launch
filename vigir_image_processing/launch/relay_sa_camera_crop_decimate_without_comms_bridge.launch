  <node name="relay_sa_cropped_right_rectified_image_still" pkg="topic_tools" type="relay" args="/rrsa_image_cropped_still/image_raw /rrsa_image_cropped/image_raw" />

  <!--Relay video to images displayed in OCS-->
  <node name="relay_sa_left_image_video" pkg="topic_tools" type="relay" args="/lsa_image_full_video/image_raw /lsa_image_full/image_raw"/>
