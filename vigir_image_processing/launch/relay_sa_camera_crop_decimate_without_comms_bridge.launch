<?xml version="1.0"?>

<launch>

  <!--Relay stills to images displayed in OCS-->
  <node name="relay_sa_left_image_still" pkg="topic_tools" type="relay" args="/lsa_image_full_still/image_raw /lsa_image_full/image_raw"/>
  <node name="relay_sa_left_camera_info_still" pkg="topic_tools" type="relay" args="/lsa_image_full_still/camera_info /lsa_image_full/camera_info"/>
