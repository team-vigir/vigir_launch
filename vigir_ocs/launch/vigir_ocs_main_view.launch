<?xml version="1.0"?>

<launch>

    <!-- Load camera configuration for the UI nodes and nodelets -->
    <rosparam command="load" file="$(find vigir_ocs)/config/atlas_camera_topics.yaml" />
    <rosparam command="load" file="$(find vigir_ocs)/config/$(env FLOR_LEFT_HAND_TYPE)_camera_topics.yaml" />
    <rosparam command="load" file="$(find vigir_ocs)/config/$(env FLOR_RIGHT_HAND_TYPE)_camera_topics.yaml" />
    <!-- Make depend on FLOR_HAND_TYPE -->
    <rosparam file="$(find vigir_ocs_grasp_widget)/launch/$(env FLOR_LEFT_HAND_TYPE)_tf.yaml" ns="l_hand_tf"/>
    <rosparam file="$(find vigir_ocs_grasp_widget)/launch/$(env FLOR_RIGHT_HAND_TYPE)_tf.yaml" ns="r_hand_tf"/>

    <param name="l_hand_type" value="$(env FLOR_LEFT_HAND_TYPE)" />
    <param name="r_hand_type" value="$(env FLOR_RIGHT_HAND_TYPE)" />
    <include file="$(find vigir_ocs)/launch/nodelets/$(env FLOR_LEFT_HAND_TYPE)_vigir_ocs_nodelets.launch" />
    <include file="$(find vigir_ocs)/launch/nodelets/$(env FLOR_RIGHT_HAND_TYPE)_vigir_ocs_nodelets.launch" />    
    

	<!--<node name="vigir_ocs_image_nodelet"       pkg="vigir_ocs_image_nodelet"       type="image_nodelet"       respawn="false"/>-->
    <node name="vigir_ocs_main_view_gandalf"    pkg="vigir_ocs_main_view"    type="main_view"    respawn="false"  output="screen"/>
    <!--<node name="vigir_ocs_image_video_manager" pkg="vigir_ocs_image_video_manager" type="image_video_manager" respawn="false"  output="screen"/> -->

</launch>
