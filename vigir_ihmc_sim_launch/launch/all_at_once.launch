<?xml version="1.0"?>

<launch>

  <include file="$(find vigir_ihmc_sim_launch)/launch/vigir_onboard.launch" />
  
  <include file="$(find vigir_ocs)/launch/vigir_ocs.launch" />  
  
 <!-- <include file="$(find ihmc_sim)/launch/ihmc_sim.launch">
    <arg name="description_model" value="$(find ihmc_models)/urdf/atlas_unplugged_v5_no_hands.urdf"/>
    <arg name="ihmc_model" default="ATLAS_UNPLUGGED_V5_NO_HANDS" />
  </include>
 --> 
  
  <!--
  Below is a copy of ihmc_sim/launch/ihmc_sim.launch that does not use a robot_state_publisher
  with IHMC's model (would mess with our setup)
  -->
  <param name="use_sim_time" value="true"/>
  <arg name="ihmc_network_file" default="$(find ihmc_sim)/configurations/IHMCNetworkParameters.ini" />
  <arg name="description_model" default="$(find ihmc_models)/urdf/atlas_unplugged_v5_no_hands.urdf" />
  <arg name="ihmc_model" default="ATLAS_UNPLUGGED_V5_NO_HANDS" />
  <arg name="starting_location" default="DEFAULT" />
  <param name="/atlas/robot_description" textfile="$(arg description_model)" />

  <node name="IHMCAtlasAPISimulator" pkg="ihmc_sim" type="IHMCAtlasAPISimulator" args="-m $(arg ihmc_model) -s $(arg starting_location)" required="true" output="screen" cwd="node">
        <env name="IHMC_ATLAS_API_OPTS" value="-DnetworkParameterFile=$(arg ihmc_network_file)" />
  </node>
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" >
    <remap from="joint_states" to="/atlas/joint_states" />
    <!--<remap from="robot_description" to="/atlas/robot_description" />-->
  </node>
  
</launch>

